{
  "name": "vitest-badge-action",
  "version": "0.0.0",
  "description": "A GitHub Action to parse vitest coverage results, and generate a badge",
  "main": "lib/main.js",
  "scripts": {
    "build": "tsc --project tsconfig.json",
    "format": "prettier --write '**/*.ts'",
    "format-check": "prettier --check '**/*.ts'",
    "lint": "eslint src/**/*.ts",
    "package": "ncc build --source-map --license licenses.txt",
    "test": "jest --passWithNoTests",
    "all": "npm run build && npm run format && npm run lint && npm run package && npm test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://@github.com/wjervis7/vitest-badge-action.git"
  },
  "author": "wjervis7",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/wjervis7/vitest-badge-action/issues"
  },
  "homepage": "https://github.com/wjervis7/vitest-badge-action#readme",
  "keywords": [
    "actions",
    "node",
    "setup"
  ],
  "dependencies": {
    "@actions/core": "^1.10.0",
    "core-js": "^3.31.0",
    "tsyringe": "^4.8.0"
  },
  "devDependencies": {
    "@types/node": "^18.16.3",
    "@typescript-eslint/parser": "^5.59.2",
    "@vercel/ncc": "^0.36.1",
    "eslint": "^8.39.0",
    "eslint-plugin-github": "^4.7.0",
    "eslint-plugin-jest": "^27.2.1",
    "jest": "^29.5.0",
    "js-yaml": "^4.1.0",
    "prettier": "^2.8.8",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.4"
  }
}
